---
pagination:
  data: collections.publishedItems
  size: 1
  alias: preview
permalink: "/images/share/{{ preview.data.title | slugify }}-preview.svg"
eleventyExcludeFromCollections: true
---

<svg width="1200" height="628" viewBox="0 0 1200 628" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

    {% set titleInLines = preview.data.title | splitlines %}
    {% set numberOfLines = titleInLines.length %}
    {% if numberOfLines == 1 %}
        {% set verticalStartingPoint = 340 %}
    {% elseif numberOfLines == 2 %}
        {% set verticalStartingPoint = 290 %}
    {% elseif numberOfLines == 3 %}
        {% set verticalStartingPoint = 250 %}
    {% elseif numberOfLines == 4 %}
        {% set verticalStartingPoint = 210 %}
    {% endif %}

    <rect width="100%" height="100%" fill="#1773cf" />

    <text text-anchor="start" font-family="'Georgia', Times, serif" fill="#fff" font-size="140">
        <tspan x="60" y="320">OB</tspan>
    </text>

    <line x1="300" y1="80" x2="300" y2="548" stroke="#fff" />

    <text font-family="'Georgia', Times, serif" font-size="30" fill="#fff">
        <tspan x="350" y="{{verticalStartingPoint - 90}}">{{ preview.date | readableFullDate }}</tspan>
    </text>
    
    <text id="text" font-family="'Georgia', Times, serif" fill="#fff" font-size="80" font-weight="bold">
    {% for line in titleInLines %}
        <tspan x="350" y="{{verticalStartingPoint + loop.index0 * 80}}">{{line}}</tspan>
    {% endfor %}
    </text>

</svg>