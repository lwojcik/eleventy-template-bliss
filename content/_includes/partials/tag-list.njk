<div class="tag-list">
  <ul>
  {% for tag in collections.tagList %}
    {%- set tagUrl -%}/{{ siteConfig.tags.pageUrlPrefix }}/{{ tag | strToSlug }}/{%- endset -%}
    <li>
      <a href="{{ tagUrl }}" title="{{ phrases.articles_tagged_as }} '{{ tag }}'">
        <span class="name">{{ tag }}</span>
        <span class="count">({{ collections[tag]| length }})</span>
      </a>
    </li>
    {% endfor %}
    
  </ul>
</div>