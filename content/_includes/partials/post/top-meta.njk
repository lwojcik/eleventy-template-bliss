{% set defaultLanguage = siteConfig.site.language %}
{%- set wordCount -%}{{ content | striptags | wordcount }}{%- endset -%}
{%- set readingTime -%}{{ wordCount | readingTimeMin }}{%- endset -%}
<div class="top-meta">
{% if language === defaultLanguage %}
  <time>{{ date|readableDate }}</time>
  <span class="separator">{{ phrases.meta_separator }}</span>  
  <span data-tooltip="{{ wordCount }} {{ phrases.words }}" class="tooltip-bottom reading-time">{{ readingTime }} {{ phrases.min }} {{ phrases.read }}</span>
{% else %}
  <time>{{ date|numericalDate }}</time>
  <span class="separator">{{ phrases.meta_separator }}</span>  
  <span data-tooltip="{{ phrases.pl.words }}: {{ wordCount }}" class="tooltip-bottom reading-time">{{ phrases.pl.read }} {{ readingTime }} {{ phrases.pl.min }}</span>
{% endif %}
</div>