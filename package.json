{
  "name": "offbeatbits",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build:eleventy": "npx eleventy --quiet",
    "build": "npm-run-all build:*",
    "postbuild": "npm run minify:js; npm run generate-epub; npm run generate-pdf",
    "clean": "rimraf _site",
    "predev": "npm run clean",
    "dev": "ELEVENTY_ENV=development npm-run-all build:sass --parallel watch:*",
    "debug": "DEBUG=Eleventy* npm run dev",
    "watch:eleventy": "npx eleventy --serve",
    "generate-epub": "node ./build-scripts/generate-epub.js",
    "generate-pdf": "node ./build-scripts/generate-pdf.js",
    "format": "npm run format:js",
    "format:js": "prettier --check *.js",
    "formatfix:js": "prettier --write *.js",
    "lint": "npm-run-all lint:*",
    "lintfix": "npm-run-all lintfix:*",
    "lint:js": "eslint .",
    "minify:js": "node ./build-scripts/minify",
    "lintfix:js": "eslint . --fix",
    "lint:md": "markdownlint-cli2 \"./**/*.md\"",
    "lintfix:md": "markdownlint-cli2-fix \"./**/*.md\"",
    "watch:sass": "sass --no-source-map --watch ./src/styles:_site/css --style compressed",
    "build:sass": "sass --no-source-map src/styles:_site/css --style compressed",
    "sort-package-json": "sort-package-json",
    "start": "npm run dev"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@photogabble/eleventy-plugin-tag-normaliser": "^1.0.4",
    "@pkvach/eleventy-plugin-pwa": "^1.4.0",
    "crypto-js": "^4.1.1",
    "eleventy-plugin-emoji": "^1.1.0",
    "eleventy-plugin-external-links": "^1.1.2",
    "eleventy-plugin-pwa-v2": "^0.0.1",
    "epub-gen": "^0.1.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "html-minifier-terser": "^7.1.0",
    "html-pdf-node": "^1.0.8",
    "image-to-base64": "^2.2.0",
    "jsdom": "^21.1.0",
    "jsonminify": "^0.4.2",
    "lodash": "^4.17.21",
    "luxon": "^3.2.1",
    "markdown-it-anchor": "^8.6.6",
    "markdown-it-footnote": "^3.0.3",
    "markdownlint": "^0.27.0",
    "markdownlint-cli2": "^0.6.0",
    "minify-xml": "^3.4.0",
    "node-html-parser": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.3",
    "require-dir": "^1.2.0",
    "rimraf": "^4.1.2",
    "sass": "^1.57.1",
    "sharp": "^0.31.3",
    "slugify": "^1.6.5",
    "sort-package-json": "^2.2.0",
    "terser": "^5.16.1"
  },
  "pre-commit": [
    "format",
    "lint"
  ]
}
